{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Hello ! ✅</h1>
        <button><a href="{{ path('users_list') }}">Back to list</a></button>

        <h3>Your super heroes {{ user.username }} :</h3>
        <p>
            Nom : {{ user.username }}<br>
            Rôle : {{ user.roles|join(', ') }}
        </p>

        <button><a href="{{ path('delete_user', {'id': user.id}) }}">Delete</a></button>
        <button><a href="{{ path('update_user', {'id': user.id}) }}">Update</a></button>

    </div>

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% endblock %}
